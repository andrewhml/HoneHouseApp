<% if user_signed_in? %>
  <%= form_tag course_charges_path(@course) do %>
    <script src="https://checkout.stripe.com/checkout.js" class='<%= class_name %>'
            data-key="<%= Rails.configuration.stripe[:live_publishable_key] %>"
            data-name="<%= @course.title %>"
            data-description="Course Registration"
            data-image="/hh-square.jpg"
            data-amount="50"></script>
  <% end %>
<% else %>
  <%= link_to 'Sign in to register', new_user_registration_path, class: 'stripe-button-link' %>
<% end %>
