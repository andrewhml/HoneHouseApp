<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <hr>
  <h3>Profile Information</h3><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :profile_image, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :profile_image, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :headline, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :headline, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :gender, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= select("user", "gender", ['Male', 'Female'], {include_blank: '--'}, class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :zip, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :zip, class: 'form-control' %>
      </div>
    </div>

    <hr>

    <h3>Want to change your password?</h3><br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :password %><br>
        <i>(leave blank if you don't want to change it)</i>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :password_confirmation %><br>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <hr>
    <h3 class="text-danger">Confirm current password to verify changes</h3><br>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :current_password %><br>
        <i>(we need your current password to confirm your changes)</i>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>


    <div class="form-group">
      <div class='col-sm-offset-2 col-sm-10'>
        <%= f.submit "Update Account", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  <hr>
  <hr>
  <hr>

  <h3>Cancel my account</h3><br>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

  <br><br>
  <%= link_to "Back", :back %>
  <br><br>
</div>
